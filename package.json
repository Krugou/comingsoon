{
  "name": "comingsoon",
  "version": "1.0.0",
  "description": "A 3D interactive Coming Soon page for NodeCG with remote control functionality",
  "main": "comingsoon/extension/index.js",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "preview": "vite preview",
    "standalone": "python3 -m http.server 8000",
    "nodecg": "node ./scripts/start-nodecg-simple.js",
    "start": "node ./scripts/start-nodecg-simple.js",
    "nodecg:bash": "./scripts/start-nodecg-simple.sh",
    "test": "./test.sh",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "keywords": [
    "nodecg",
    "three.js",
    "coming-soon",
    "3d",
    "graphics"
  ],
  "author": "",
  "license": "MIT",
  "nodecg": {
    "compatibleRange": "^2.0.0",
    "dashboardPanels": [
      {
        "name": "controls",
        "title": "Coming Soon Controls",
        "width": 3,
        "file": "controls.html",
        "headerColor": "#002ea2"
      },
      {
        "name": "name-tag-chyron",
        "title": "Name Tag Chyron",
        "width": 3,
        "file": "name-tag-chyron.html",
        "headerColor": "#0F79C6"
      },
      {
        "name": "breaking-news",
        "title": "Breaking News",
        "width": 3,
        "file": "breaking-news.html",
        "headerColor": "#dc2626"
      }
    ],
    "graphics": [
      {
        "file": "index.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "name-tag-chyron.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "breaking-news.html",
        "width": 1920,
        "height": 1080
      }
    ]
  },
  "dependencies": {
    "nodecg": "^2.6.4",
    "three": "^0.182.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/eslint__js": "^8.42.3",
    "autoprefixer": "^10.4.24",
    "eslint": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
